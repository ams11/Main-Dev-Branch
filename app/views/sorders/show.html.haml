
- content_for :head do
  = stylesheet_link_tag "blueprint/screen", :media => "screen, projection"
  = stylesheet_link_tag "blueprint/print", :media => "print"
  /[if lt IE 8]
    = stylesheet_link_tag "blueprint/ie", :media => "screen, projection"

%div{:style => "margin:10px; font-size:75%"}

  %h1 Display Order

  %div.span-8.append-1
    %fieldset
      %legend Order Header
      %table
        %tr
          %td Order Number
          %td= @order.name
        %tr
          %td Order Date
          %td= @order.created_at.strftime("%Y-%m-%d %I:%M%p")
        %tr
          %td Order Status
          %td= @order.unshipped_items_for_vendor ? "open" : "fulfilled"
        %tr
          %td Subtotal
          %td= number_to_currency @order.total_line_items_price_vendor
        %tr
          %td Shipping
          %td= number_to_currency @order.shipping_vendor
        %tr
          %td ORDER TOTAL
          %td= number_to_currency @order.total_price_vendor
    
  %div.span-10.last
    %fieldset
      %legend Shipping Address
      %table
        %tr
          %td Name
          %td= @order.shipping_address.name
        %tr
          %td Address 1
          %td= @order.shipping_address.address1
        - if !@order.shipping_address.address2.nil? && !@order.shipping_address.address2.empty?
          %tr
            %td Address 2
            %td= @order.shipping_address.address2
        %tr
          %td City
          %td= @order.shipping_address.city
        %tr
          %td State
          %td= @order.shipping_address.province_code
        %tr
          %td ZIP Code
          %td= @order.shipping_address.zip
        %tr
          %td Phone
          %td= @order.shipping_address.phone
        %tr
          %td Tracking Number
          %td= 42
    
  %div.span-20.last
  %div.span-10.last
    %fieldset
      %legend Order Items
      %table
        %thead
          %tr
            %th Qty
            %th SKU
            %th Description
            %th Size
            %th Status
        %tbody
          - @order.line_items.each do |li|
            %tr
              %td= li.quantity
              %td= li.sku
              %td= li.title
              %td= li.variant_title
              %td= li.fulfillment_status
  
  %div.span-24{:style => "margin-top:50px"}
    %hr
    %h1 Dev stuff
    %p Find me in app/views/sorders/display.html.haml

    %p
      %pre= @order.to_yaml

      
      
      
      
      
      