  :javascript
    $(function() {
      $("#sidebar").accordion({
        event: "mouseover",
        icons: { 'header': 'accordion-no-icons', 'headerSelected': 'accordion-no-icons'}
      });
      
      rotateHero();
    });
    
    var current_sidekick = 2;
    function rotateHero() {
      current_sidekick = (current_sidekick + 1) % 3;
      
      $('#sidekick div').removeClass('boxActive').addClass('box');
      $('#sidekick div:eq(' + current_sidekick + ')').removeClass('box').addClass('boxActive');
      
      //alert('text = ' + $('.post-title').text());
      $('.post-title').text('Hero title ' + current_sidekick)

      //alert('desc = ' + $('.category-link').text());
      $('.category-link').text('Hero description ' + current_sidekick + '.  Lorem ipsum dolor sit amet, consectetur adipiscing elit.')
      
      setTimeout("rotateHero()", 3000);
    }

