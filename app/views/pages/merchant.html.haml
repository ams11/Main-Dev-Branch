
- content_for :head do
  = stylesheet_link_tag 'white/jquery-ui-1.8.11.custom.css'
  = javascript_include_tag 'white/jquery-ui-1.8.11.custom.min.js'
  = stylesheet_link_tag "portal.css"

  :javascript
    $(function() {
      $('#tabs').tabs();
    })

%div{:style => "margin:10px"}
  %h2 Merchant Portal
  .form-box
    %div
      %div{:style => "float:left; width:400px"}
        %h3 Products
        %ul
          %li= link_to "List Products (#{@countProducts})", sproducts_path
          %li= link_to "New Product", new_sproduct_path

        %h3 Orders
        %ul
          %li= link_to "Open Orders (#{@countOpenOrders})", "#{sorders_path}/open"
          %li= link_to "All Orders", "#{sorders_path}"
          %li
            %span{:style => "color:red"}= "Late Orders: #{'42'}"
          
      %div{:style => "float:left; width:400px"}
        %h3 Store
        %ul
          %li= "Total Products: #{@countProducts}"

        %h3 Orders
        %ul
          %li= "Open Orders: #{@countOpenOrders}"

      %div{:style => "clear:both"}

  %div{:style => "margin-top:100px"}
    %hr
    %h1 Dev stuff
    %p Find me in app/views/pages/merchant.html.haml

    /
      %p
        = 'shopify_store_url = ' + APP_CONFIG['shopify_store_url']
        %br/
        = 'shopify_api_key = ' + APP_CONFIG['shopify_api_key']
        %br/
        = 'shopify_password = ' + APP_CONFIG['shopify_password']

    %p= "Number of smart collections = #{Mproduct.smart_collections}"
    %p= "Number of custom collections = #{Mproduct.custom_collections}"
    %p= "Number of custom collections with title Hats-Snapbacks = #{Mproduct.custom_collection('Hats-Snapbacks')}"
    %p= "Find or create custom collection with title Hats-Snapbacks = #{Mproduct.find_or_create_custom_collection('Hats-Snapbacks')}"

    %script
      document.write('<p>jQuery version = ' + $().jquery + '</p>');
      document.write('<p>jQuery UI version = ' + $.ui.version + '</p>');

    %p  
      %h2.demoHeaders Tabs
      %div#tabs
        %ul
          <li><a href="#tabs-1">First</a></li>
          <li><a href="#tabs-2">Second</a></li>
          <li><a href="#tabs-3">Third</a></li>
