<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>

  <% if has_role? :admin %>
	  <p>
		<%= f.label :roles %><br />
		<%= f.select :roles, controller.authorization_engine.roles, {}, {:multiple => false} %>
	  </p>
  <% end %>
  
  <p><%= f.submit %></p>
<% end %>
