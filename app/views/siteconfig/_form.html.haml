    
= form_for @siteconfig, :html => { :multipart => true} do |f|
  
  -if @siteconfig.errors.any?
    #error_explanation
      %h2= "#{pluralize(@siteconfig.errors.count, "error")} prohibited this siteconfig from being saved:"
      %ul
        - @siteconfig.errors.full_messages.each do |msg|
          %li= msg

  %table
    %tr
      .field
        %td= f.label :hero_url
        %td= f.text_field :hero_url
        %td= f.file_field :hero_picture
    %tr
      .field
        %td= f.label :sidekick_url_1
        %td= f.text_field :sidekick_url_1
        %td= f.file_field :sidekick_picture_1
    %tr
      .field
        %td= f.label :sidekick_url_2
        %td= f.text_field :sidekick_url_2
        %td= f.file_field :sidekick_picture_2
    %tr
      .field
        %td= f.label :sidekick_url_3
        %td= f.text_field :sidekick_url_3
        %td= f.file_field :sidekick_picture_3
  .actions
    = f.submit 'Save'
